extends layout

block content
  h1= DUMO
  div.newToDo
    form(action = '/createProject' method = 'post')
      input(name ='projectName' placeholder = 'Enter new Project')
      input(name ='projectDescription' placeholder = 'Enter  Description')
      button Submit

  table.table
    each project in allProjects
      tr
        td #{project.project_name}
        td #{project.project_description}
        td.deletebutton
          a.btn.btn-danger(href='/deleteProject/' + projects.project_id) X
